#include "ft_printf.h"

void	ft_putchar(char c)
{
	if (!c)
		write(1, "(null)", 6);
	else
		write(1, &c, 1);
}

void	ft_putstr(char *str)
{
	if (!str)
		write(1, "(null)", 6);
	else
		write(1, str, ft_strlen(str));
}

void	ft_putnbr(int num, char signo, int base)
{
	unsigned int	num_long;

	if (!num)
		write(1, "(null)", 6);
	else
	{
		if (num < 0)
		{
			if (signo == '-')
				ft_putchar('-');
			num_long = (num * -1);
		}
		else
		{
			num_long = num;
			if (num_long <= 9)
				ft_putchar(num_long + '0');
			if (num_long > 9)
			{
				ft_putnbr(num_long / base, signo, base);
				ft_putnbr(num_long % base, signo, base);
			}
		}
	}
}

void	ft_printhex(void *ptr, char c)
{
	if (c == 'p')
	{
		write(1, "0x", 2);
	}
	ft_atoihex(&ptr);
}

int	ft_isspace(char c)
{
	if ((c >= 9 && c <= 13) || c == ' ')
		return (1);
	return (0);
}

void	ft_printhex(unsigned long long *ptr)
{
	if (!ptr)
		write(1, "(null)", 6);
	else
	{
		if (num < 0)
		{
			ptr = (ptr * -1);
		}
		else
		{
			if (ptr <= 9)
				ft_putchar(ptr + '0');
			if (ptr > 9)
			{
				ft_printhex(ptr / 16);
				ft_printhex(nptr % 16);
			}
		}
	}
}
